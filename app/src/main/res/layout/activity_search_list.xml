<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:id="@+id/butBack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:textSize="24dp"
            android:layout_marginTop="8dp"
            android:text="Buscar Playlist"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/menu"
            android:layout_marginTop="8dp"

            />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/colorSearch">

           <EditText
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:hint="Buscar una lista de reproducciÃ³n"
               android:id="@+id/searchs"
               />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/loupe"
                android:layout_marginTop="8dp"
                android:id="@+id/butSearch"
                />



        </LinearLayout>


    </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listV">

        </ListView>




    </LinearLayout>




</RelativeLayout>